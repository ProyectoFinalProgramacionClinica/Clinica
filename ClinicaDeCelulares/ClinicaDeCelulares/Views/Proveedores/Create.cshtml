@model ClinicaDeCelulares.Models.Proveedores

@{
    ViewData["Title"] = "Create";
}

<h2>Crear Proveedor</h2>

<h5></h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label class="control-label">Compañia</label>
                <input asp-for="compania" class="form-control" />
                <span asp-validation-for="compania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre del Representante</label>
                <input asp-for="nombreRepresentante" class="form-control" />
                <span asp-validation-for="nombreRepresentante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono</label>
                <input asp-for="telefonoProveedor" class="form-control" />
                <span asp-validation-for="telefonoProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
